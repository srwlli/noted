{
  "expo": {
    "name": "Noted",
    "slug": "noted",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/noted-white.png",
    "scheme": "noted",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android", "web"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.srwlli.noted",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.srwlli.noted"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/noted-white.png",
      "name": "Noted",
      "shortName": "Noted",
      "description": "AI-powered markdown notes with smart organization, folders, and intelligent features like auto-generated titles and summaries",
      "display": "standalone",
      "startUrl": "/",
      "orientation": "portrait",
      "themeColor": "#000000",
      "backgroundColor": "#ffffff",
      "scope": "/",
      "lang": "en",
      "dir": "ltr",
      "preferRelatedApplications": false,
      "bundler": "metro",
      "categories": ["productivity", "utilities"],
      "meta": {
        "apple-mobile-web-app-capable": "yes",
        "apple-mobile-web-app-status-bar-style": "black-translucent",
        "apple-mobile-web-app-title": "Noted",
        "mobile-web-app-capable": "yes",
        "msapplication-TileColor": "#000000",
        "msapplication-tap-highlight": "no",
        "viewport": "width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover"
      },
      "manifest": {
        "icons": [
          {
            "src": "./assets/images/noted-white.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
          },
          {
            "src": "./assets/images/noted-white.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
          }
        ]
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b96989f2-32e0-41c8-8634-bdf692257aea"
      }
    }
  }
}
