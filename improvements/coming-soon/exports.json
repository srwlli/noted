    "userNeed": [
      "Backup notes locally",
      "Share notes outside the app",
      "Migrate to other note-taking apps",
      "Print notes",
      "Archive old notes"
    ]
  },

  "exportFormats": {
    "markdown": {
      "priority": "high",
      "description": "Export notes as .md files",
      "features": [
        "Single note export",
        "Bulk export (folder or all notes)",
        "Preserves formatting",
        "Compatible with most note apps"
      ]
    },
    "pdf": {
      "priority": "high",
      "description": "Export notes as PDF documents",
      "features": [
        "Single note export",
        "Print-friendly formatting",
        "Includes metadata (date, title)",
        "Professional appearance"
      ]
    },
    "txt": {
      "priority": "medium",
      "description": "Plain text export",
      "features": [
        "Simple text files",
        "No formatting",
        "Universal compatibility"
      ]
    },
    "json": {
      "priority": "medium",
      "description": "Export as structured JSON",
      "features": [
        "Complete data export",
        "Includes metadata (dates, folder, etc.)",
        "Easy re-import",
        "Developer-friendly"
      ]
    },
    "html": {
      "priority": "low",
      "description": "Export as HTML files",
      "features": [
        "View in browser",
        "Preserves formatting",
        "Embeddable in websites"
      ]
    }
  },

  "exportScope": {
    "singleNote": "Export individual note",
    "folder": "Export all notes in a folder",
    "allNotes": "Export entire note library",
    "selection": "Export selected notes (multi-select)"
  },

  "technicalImplementation": {
    "clientSide": true,
    "reasoning": [
      "No server processing needed",
      "Works offline (PWA)",
      "Privacy-friendly (no data leaves device)",
      "Instant downloads"
    ],
    "libraries": {
      "markdown": "Built-in (notes already plain text)",
      "pdf": "jsPDF or react-pdf",
      "json": "JSON.stringify (native)",
      "html": "Template literal with CSS",
      "txt": "Native blob download"
    }
  },

  "uiDesign": {
    "location": "Note card menu (...) → Export",
    "bulkExport": "Header menu → Export Notes",
    "exportModal": {
      "title": "Export Notes",
      "options": [
        "Choose format (dropdown)",
        "Choose scope (single/folder/all)",
        "Download button"
      ]
    }
  },

  "implementation": {
    "phase1": "Single note export (Markdown, PDF, TXT)",
    "phase2": "Bulk export (folder, all notes)",
    "phase3": "JSON export with metadata",
    "phase4": "HTML export with styling"
  },

  "estimatedDuration": "12-16 hours",

  "notes": [
    "Start with Markdown (easiest, most useful)",
    "PDF export adds significant value for sharing",
    "JSON export crucial for data portability",
